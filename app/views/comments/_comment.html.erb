<div id="<%= dom_id comment %>">
  <div class='comment'>
    <small class='meta w-100 text-end float-end'>
      <%= comment.user.name %> |
      <%= comment.created_at %> |
      <%= link_to "Edit", edit_comment_path(comment), "data-controller": "turbo" %> |

      <%= link_to 'Destroy', comment, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
    </small>
    <%= comment.body %>
    
    <div class='emojis'>
      <% Emoji.all.each do |emoji| %>
        <% size = comment.emotes_size(emoji[:key]) %>
        <%= link_to comment_emote_path(comment, emote: emoji[:key]), class: "emoji #{size.zero? ? 'emoji-gray' : ''}", remote: true do %>
          <%= image_tag File.join('emojis', emoji[:key]), size: '35x35', title: emoji[:text] %>
          <%= content_tag :span, size, class: 'count' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
