<%= form_with(model: comment, url: [@article, comment], local: false, id: "edit-comment-form") do |form| %>


  <div class="mb-3">
      <%= form.text_area :body, class: 'form-control', id: "edit-comment-text" %>
    </div>

  <div class="mb-3">
      <% if comment.persisted? %>
  <div class="float-end">
    <%= link_to 'Destroy', [@article, comment], method: :delete, remote: true, class: "text-danger", data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>
    <%= form.submit class: 'btn btn-primary' %>

    <button type="button" class="btn btn-dark" data-bs-dismiss="modal" aria-label="Close">Close</button>

  </div>
<% end %>
