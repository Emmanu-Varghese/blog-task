<%= turbo_frame_tag "announcement_handler" do %>
  <%= turbo_stream_action_tag(
    "append",
    target: "announcements",
    template: %(#{render(AnnouncementComponent.with_collection(@announcements))}) 
  ) %>
  <%= turbo_stream_action_tag(
    "replace",
    target: "pager",
    template: %(#{render "pager", pagy: @pagy})
    ) %>
<% end %>